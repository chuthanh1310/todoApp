@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<ADO.NETtodoApp.Models.Todo>
<div class="todo-wrapper">
    <h2>ToDo List</h2>

    <!-- Form nhập công việc mới -->
    <form asp-action="CreateInline" method="post" id="todoForm" class="todo-form">
        <input type="text" name="Title" placeholder="Nhập công việc..." class="form-control todo-input" required autofocus />
    </form>

    <!-- Danh sách công việc -->
    @if (Model != null && Model.Any())
    {
        foreach (var todo in Model)
        {
            <div class="todo-item" data-id="@todo.Id">
                <div class="todo-left">
                    <!-- Checkbox -->
                    <form asp-action="ToggleComplete" method="post" class="d-inline toggle-form">
                        <input type="hidden" name="id" value="@todo.Id" />
                        <input type="checkbox" class="todo-checkbox" onchange="this.form.submit()" @(todo.IsCompleted ? "checked" : "") />
                    </form>

                    <!-- Hiển thị title -->
                    <span class="todo-title @(todo.IsCompleted ? "done" : "")" ondblclick="enableEdit(this)">
                        @todo.Title
                    </span>

                    <!-- Form chỉnh sửa -->
                    <form asp-action="EditTitle" method="post" class="edit-form" style="display:none;">
                        <input type="hidden" name="Id" value="@todo.Id" />
                        <input type="text" name="NewTitle" class="edit-input form-control" value="@todo.Title" onkeydown="submitOnEnter(event, this)" />
                    </form>
                </div>

                <!-- Nút xóa -->
                <form asp-action="Delete" method="post" class="delete-form">
                    <input type="hidden" name="id" value="@todo.Id" />
                    <button type="submit" class="delete">X</button>
                </form>
            </div>
        }
    }
    else
    {
        <div class="todo-empty">Chưa có việc nào.</div>
    }

    <!-- Bộ đếm + nút xóa hoàn thành -->
    <div class="d-flex justify-content-between align-items-center mt-3 todo-footer">
        <span>Bạn còn @ViewBag.CountUnfinished công việc chưa hoàn thành</span>

        @if (Model.Any(t => t.IsCompleted))
        {
            <form asp-action="DeleteComplete" method="post" class="delete-completed-form">
                <button type="submit" class="btn btn-sm btn-danger">Xóa công việc đã hoàn thành</button>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("todoForm").addEventListener("submit", function (e) {
        });
    </script>
    <script src="~/js/site.js"></script>
}
